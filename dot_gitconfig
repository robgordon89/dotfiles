[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
[alias]
    all = "!f() { ls -R -d */.git | xargs -P10 -I{} git -C {} $1; }; f"
    main = checkout main
    dev = checkout develop
    develop = checkout develop
    default = "!f() { git remote show origin | sed -n '/HEAD branch/s/.*: //p' | xargs -P10 -I{} git checkout {} $1; }; f"
    pull-default = "!f() { git remote show origin | sed -n '/HEAD branch/s/.*: //p' | xargs -P10 -I{} git checkout {} $1 && git pull origin $1; }; f"
    main-pull = "!f() { git checkout main && git pull origin main; }; f"
	s = status -sb
	a = add
	c = commit
	p = push
    pb = push origin HEAD
    undo = reset HEAD~1 --mixed
    res = !git reset --hard
    done = !git push origin HEAD
[diff "ansible-vault"]
	textconv = ansible-vault view
[gpg]
	format = ssh
[pull]
	default = current
	rebase = false
[push]
	default = current
[url "git@github.com:"]
	insteadOf = https://github.com/
